      <div id="info-container">
        <div id="updates-container">
          <h2>Real-time Updates</h2>
          <div id="updates-content">
            Area covered by the radius will be displayed here
            <p>
              <strong>Area Covered by Radiation:</strong>
              <span id="area-covered">Calculating...</span>
            </p>
          </div>
        </div>

        <button class="btn">Contact</button>
        <button class="btn">SOS</button>
        <h2>Evacuation Tips</h2>
        <p><%= evacuationTips || "No tips available." %></p>
    
        <h2>Nearby Facilities</h2>
        <% if (facilities.length > 0) { %>
            <ul>
                <% facilities.forEach(facility => { %>
                    <li>
                        <span>Name: <%= facility.tags?.name || "Unnamed Facility" %></span><br>
                        <span class="facility-type">Type: <%= facility.tags?.amenity || facility.tags?.shop || "Building" %></span><br>
                        <span>Latitude: <%= facility.lat %>, Longitude: <%= facility.lon %></span>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No nearby facilities found.</p>
        <% } %>
        <h6>Developed by @teamCodiee</h6>
      </div>
    </div>
    
   <script src="user/javascript/nukemap.js"></script>

