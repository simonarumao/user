<% layout('layout/boilerplate') %>
<div class="alert-box">
  <h2>ALERT</h2>
  <marquee>
    <span class="marquee_margin__Rni52" style="cursor: pointer"
      >***
      <strong
        >No Alerts | Keep Checking for Alerts | Website In Progress***</strong
      >
    </span>
  </marquee>
</div>

<div class="carousel">
  <div class="slides">
    <div class="slide" id="slide1">
      <a
        href="https://www.w3.org/WAI/ER/tests/xhtml/testfiles/resources/pdf/dummy.pdf"
      >
        <img
          src="user/images/Prime Minister's Ten Point Agenda for Disaster Risk Reduction_0.png"
          alt="Image 1"
        />
